-- Ensures colourized output from test runners
test-show-details: direct
tests: true
benchmarks: true

program-options
  ghc-options: -Werror

-- Windows cross with bitvec/simd is broken.
package bitvec
  -- Workaround for windows cross-compilation
  flags: -simd

if impl(ghc >=9.14)
  constraints:
    , nothunks ^>= 0.2
    , os-string >= 2.0.8
    , QuickCheck < 2.17.0.0

