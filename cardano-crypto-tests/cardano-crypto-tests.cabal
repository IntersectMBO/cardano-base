name:                cardano-crypto-tests
version:             2.0.0
synopsis:            Tests for cardano-crypto-class and -praos
description:         Tests for cardano-crypto-class and -praos
license:             Apache-2.0
license-files:
  LICENSE
  NOTICE
author:              IOHK
maintainer:          operations@iohk.io
copyright:           2020 IOHK
category:            Currency
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

flag development
    description: Disable `-Werror`
    default: False
    manual: True

library
  hs-source-dirs:      src
  exposed-modules:
                       Test.Crypto.DSIGN
                       Test.Crypto.Hash
                       Test.Crypto.KES
                       Test.Crypto.Util
                       Test.Crypto.VRF

  build-depends:       base
                     , bytestring
                     , cardano-binary
                     , cardano-crypto-class
                     , cardano-crypto-praos
                     , cardano-prelude
                     , cborg
                     , cryptonite
                     , formatting
                     , QuickCheck
                     , tasty
                     , tasty-quickcheck

  default-language:    Haskell2010

  ghc-options:         -Wall
                       -Wincomplete-record-updates
                       -Wincomplete-uni-patterns
                       -Wredundant-constraints
                       -Wpartial-fields
                       -Wcompat
  if impl(ghc >=8.8)
    ghc-options:       -Wno-missing-deriving-strategies
  if impl(ghc >=8.10)
    ghc-options:       -Wno-missing-safe-haskell-mode
                       -Wno-prepositive-qualified-module
                       -Wno-unused-packages

  if (!flag(development))
    ghc-options:         -Werror


test-suite test-crypto
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  build-depends:       base
                     , bytestring
                     , cardano-binary
                     , cardano-crypto-class
                     , cardano-crypto-praos
                     , cardano-crypto-tests
                     , cborg
                     , cryptonite
                     , formatting
                     , QuickCheck
                     , tasty
                     , tasty-quickcheck

  default-language:    Haskell2010

  if impl(ghc >=8.8)
    ghc-options:       -Wno-missing-deriving-strategies
  if impl(ghc >=8.10)
    ghc-options:       -Wno-missing-safe-haskell-mode
                       -Wno-prepositive-qualified-module
                       -Wno-unused-packages
